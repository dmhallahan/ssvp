<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<title><%= "#{controller.controller_name.capitalize}: #{controller.action_name}" %></title>
  
  <%= jqgrid_stylesheets %>
  <%= jqgrid_javascripts %> 
  <%= javascript_include_tag 'application', 'zoom', :cache => true %>
  
  
  <%= stylesheet_link_tag 'terrafirma' %>
  
</head>

<%if controller.action_name == "map"%>
  <body>
<%else%>
  <body onLoad="changeFontSize(0, 0, true);"> 
<%end%>


<%if flash[:notice] %>
  <script>alert('<%= flash[:notice] %>')</script>
<%end%>

<div id="wrapper">
	<div id="header" class="container">
		<div id="logo">
			<h1>St.Vincent de Paul</h1>
			<p>Food Delivery Program</p>
		</div>
		<div id="banner"></div>
	</div>
	<div id="menu" class="container">
		<ul>
			<%= tab_for("Dashboard", "/dashboard") %>
			<%= tab_for 'Recipients', recipients_path %>
			<%= tab_for 'Vincentians', vincentians_path %>
			<%= tab_for 'Deliveries', deliveries_path %>
			<%=tab_for 'Teams', team_path('new') %>
		</ul>
	</div>
	<div id="top-bar" class="container">
		<div class="bar">
    <%= yield :instructions %>
		</div>
	</div>
	<div id="page" class="container">
		<div id="content">
          <%= yield %>
		</div> 
		<div class="clearfix">&nbsp;</div>
		<div id="footer-bar" class="two-cols">
			<div class="col1">
				<h2>Follow these steps</h2>
				<p><%= link_to 'Recipients', recipients_path%> > <%= link_to 'Vincentians', vincentians_path%> > <%= link_to 'Deliveries', deliveries_path%> > <%= link_to 'Team', team_path('new')%> > <%= link_to 'Print', '/dashboard' %></p>
			</div>
			<div class="col2">
				<ul>
					<li><%= link_to 'ssvp.ca', "http://ssvp.ca/", :target => '_blank'%></li>
					<li><%= link_to 'ssvp windsor essex', "http://www.ssvpwindsoressex.com/", :target => '_blank'%></li>
				</ul>
			</div>
			<div class="clearfix">&nbsp;</div>
		</div>
	</div>
</div>
<div id="copyright" class="container">
	<p>created and designed by david hallahan</p>
</div>
</body>
</html>
